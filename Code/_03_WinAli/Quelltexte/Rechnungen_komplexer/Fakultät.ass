 start 0

 ini a
 
 lda 0, a
 cmp 0, '0'
 lda 0, '1'
 sta 0, b	* b = 1
 be ende	* if a = 0 goto ende
 bnh klein	* if a <= 0 goto klein

loop lda 0, a	* Start while (a > 0)
 cmp 0, '0'
 be ende	* if a = 0 goto ende

 lda 0, b
 mul 0, a
 sta 0, b	* b = b * a 
		*(Start mit b = 1 * a = a)
 lda 0, a
 sub 0, '1'
 sta 0, a	* a = a - 1
 b loop		* goto loop

klein outi '-1'	* keine Fakultät berechenbar
 eoj

ende outi b	* b = Fakultät(a)
 eoj

a ds f
b ds f

 end